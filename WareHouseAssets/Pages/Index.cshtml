@page
@model WareHouseAssets.Pages.HomeModel
@{
	ViewData["Title"] = "Index";
}

<body style="background-color:#b1bcda">
	<h1 class="Headings">WareHouse Assets</h1>


    <!-- Code for Image Carousel from Bootstrap - https://getbootstrap.com/docs/4.0/components/carousel/ -->
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 img-fluid" src="Images/Drill Bits.jpg" alt="Drill Bits" style="height: 450px; object-fit:cover">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="Images/Pane of Glass.jpg" alt="Pane of Glass" style="height: 450px; object-fit:cover">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="Images/Screws.jpg" alt="Screws" style="height: 450px; object-fit:cover">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="Images/Wood.jpg" alt="Wood" style="height: 450px; object-fit:cover">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!--Pause the carousel when hovering over the image-->
    <script>
        $('.carousel').carousel({
            interval: 2000,
            pause: 'hover'
        })
    </script>

    <div class="row" style="margin-top: 10px;">
            <div class="col-sm-4">
                <div class="card" style="height: 350px;">
                <img class="card-img-top" src="Images/Development.jpg" alt="Picture of someone using a grinder" style="height: 250px;  object-fit: cover;"/>
                    <div class="card-body">
                        <p class="card-text">Production Development</p>
                    </div>
                </div>
            </div>
    
        <div class="col-sm-4">
            <div class="card" style="height: 350px;">
                <img class="card-img-top" src="Images/Engineering.jpg" alt="Picture of someone engineering" style="height: 250px;  object-fit: cover;"/>
                <div class="card-body">
                    <p class="card-text">Manufacturing Engineering</p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card" style="height: 350px;">
                <img class="card-img-top" src="Images/Assemble.jpg" alt="Picture of someone reading instructions" style="height: 250px; object-fit: cover;"/>
                <div class="card-body">
                    <p class="card-text">Assembling</p>
                </div>
            </div>
        </div>
    </div>

   
</body>

